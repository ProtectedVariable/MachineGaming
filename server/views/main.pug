doctype html
html(lang="en")
    include head.pug
    body
        div.container
            h1 MachineGaming
            if currentGame != "-"
                h2 Current Task: #{currentGame} ( #{currentFitness} ) - #{remainingCycles} generation(s) remaining
            else
                h2 Current Task: None
            form(action="/task" method='POST')
                div.form-group
                    label(for="tgame") Game:
                    select.form-control.custom-select(name="game")
                        each game in games
                            option(value=`${game._id}`) #{game.name} ( #{game.fitness} )
                div.form-group
                    input.btn.btn-primary(type="submit" value="Do 1 Gen" name="onegen")
                    input.btn.btn-primary(type="submit" value="Do 100 Gen" name="hungen")
                    input.btn.btn-primary(type="submit" value="Do Infinite Gen" name="infgen")
            hr
            h2 Workers
            - var index = 0;
            each w in workers
